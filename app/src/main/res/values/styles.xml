<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BookImage">
        <item name="android:layout_width">@dimen/list_item_width</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_for_list</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
</resources>

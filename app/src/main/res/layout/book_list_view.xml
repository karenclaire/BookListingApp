<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_for_list">



    <ImageView
        android:id="@+id/book_image"
        style="@style/BookImage" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_toRightOf="@id/book_image">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textSize="@dimen/title_text_size"
            android:maxLines="2"
            android:textColor="@color/textColorTitle"
            tools:text="@string/title" />
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/textColorEarthquakeDetails"
            android:textSize="@dimen/author_publication_text_size"
            android:layout_marginLeft="16dp"
            tools:text="@string/author" />
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/textColorEarthquakeDetails"
            android:textSize="@dimen/author_publication_text_size"
            android:layout_marginLeft="16dp"
            tools:text="@string/category" />
        <TextView
            android:id="@+id/publication_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/textColorEarthquakeDetails"
            android:textSize="@dimen/author_publication_text_size"
            android:layout_marginLeft="16dp"
            tools:text="@string/publication" />


    </LinearLayout>


</RelativeLayout>